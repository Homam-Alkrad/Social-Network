@model StudentCommunity.UI.Models.Competition.CreateQuestionModel
@using Microsoft.AspNetCore.Identity
@using StudentCommunity.UI.Data
@inject UserManager<ApplicationUser> UserManager
@{
	Layout = "";
	var user = await UserManager.GetUserAsync(User);
	ViewData["Title"] = "Insert Question";

}

<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"]</title>
	<link rel="icon" href="~/custom/images/fav.png" type="image/png" sizes="16x16">
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<script src="~/js/jquery-3.7.0.js"></script>
	<link href="~/js/jquery.datatables.min.css" rel="stylesheet" />
	<script src="~/js/jquery.datatables.min.js"></script>

	<link href="~/custom/css/main.min.css" rel="stylesheet" />
	<link href="~/custom/css/strip.css" rel="stylesheet" />
	<link href="~/custom/css/style.css" rel="stylesheet" />
	<link href="~/custom/css/color.css" rel="stylesheet" />
	<link href="~/custom/css/responsive.css" rel="stylesheet" />
</head>
<body>
	<section>
		<div class="gap no-top">
			<div class="container-fluid">
				<div class="row">
					<div class="col-lg-12">
						<div class="g-map" style="background: #088dcd none repeat scroll 0 0;">
							<div id=""></div>
							<div class="map-meta">
								<h1>Create Question Page</h1>
								<p class="ml-5">Only authorized person can  access to  this page.</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<section>
		<div class="gap no-top overlap">
			<div class="container">
				<div class="row">
					<div class="col-lg-12">
						<div class="contct-info">
							<div class="contact-form">
								<div class="cnt-title">
									<span>Add New  Question Page</span>
									<i><img src="images/envelop.png" alt=""></i>
								</div>
								<form asp-action="CreateQuestion" asp-controller="Competition" enctype="multipart/form-data">
									<div class="form-group col-lg-12">
										<input type="text" id="input" required="required" asp-for="QuestionTitle" />
										<label class="control-label" for="input">Question Title</label><i class="mtrl-select"></i>
										<span asp-validation-for="QuestionTitle" class="text-danger"></span>
									</div>
									<div class="form-group col-lg-12">
										<textarea rows="4" id="textarea" required="required" style="height: 150px;" asp-for="QuestionText"></textarea>
										<label class="control-label" for="textarea">Question Text</label><i class="mtrl-select"></i>
										<span asp-validation-for="QuestionText" class="text-danger"></span>
									</div>
									<select class="form-select m-3" aria-label="Default select example" asp-for="QuestionLevel">
										<option selected>Open this select menu</option>
										<option value="@LevelEnum.Easy">Easy</option>
										<option value="@LevelEnum.Medium">Medium</option>
										<option value="@LevelEnum.Hard">Hard</option>
									</select>
									<input type="hidden" asp-for="@Model.InitialCompetitionId" value="@Model.InitialCompetitionId" />
									<input type="submit" class="btn btn-primary ml-3 mt-2" />
								</form>
							</div>
							<div class="cntct-adres">
								<p class="text-white">
									Thank you for contributing to our question bank!
									Please follow the guidelines below to craft your questions:
								</p>
								<div class="my-1 p-1">
									<h5>1_Question Title:</h5>Provide a brief and descriptive title for your question.
								</div>
								<div class="my-1 p-1">
									<h5>2_Question Level:	</h5>Specify the  difficulty level of your question.
								</div>
								<div class="my-1 p-1">
									<h5>3_Question  Text:</h5>Compose the main body of your question. Clearly present the problem, scenario, or challenge.
								</div>

								<h1 class="bg-cntct">Community</h1>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<footer>
		<div class="container">
			<div class="row">
				<div class="col-lg-4 col-md-4" style="margin: -30px 0px;">
					<div class="widget">
						<div class="foot-logo">
							<div class="logo">
								<a href="index-2.html" title=""><img src="~/custom/images/resources/logo4.png" alt=""></a>
							</div>
							<p>
								Take Care of Your Well-Being – Mind, Body, and Soul.
							</p>
						</div>
						<ul class="location">
							<li>
								<i class="ti-map-alt"></i>
								<p>
									Amman, Jordan, Irbid, and our central hub in Alramth.
								</p>
							</li>
							<li>
								<i class="ti-mobile"></i>
								<p>+962 7 9741 2338</p>
							</li>
						</ul>
					</div>
				</div>
				<div class="col-lg-2 col-md-4">
					<div class="widget">
						<div class="widget-title"><h4>follow</h4></div>
						<ul class="list-style">
							<li><i class="fa fa-facebook-square"></i> facebook</li>
							<li><i class="fa fa-twitter-square"></i>twitter</li>
							<li><i class="fa fa-instagram"></i>instagram</li>
							<li><i class="fa fa-google-plus-square"></i>Google+</li>
						</ul>
					</div>
				</div>
				<div class="col-lg-2 col-md-4">
					<div class="widget">
						<div class="widget-title"><h4>Navigate</h4></div>
						<ul class="list-style">
							<li><a href="about.html" title="">about us</a></li>
							<li><a href="contact.html" title="">contact us</a></li>
							<li><a href="terms.html" title="">terms & Conditions</a></li>
							<li><a href="#" title="">RSS syndication</a></li>
							<li><a href="sitemap.html" title="">Sitemap</a></li>
						</ul>
					</div>
				</div>
				<div class="col-lg-2 col-md-4">
					<div class="widget">
						<div class="widget-title"><h4>useful links</h4></div>
						<ul class="list-style">
							<li><a href="#" title="">leasing</a></li>
							<li><a href="#" title="">submit route</a></li>
							<li><a href="#" title="">how does it work?</a></li>
							<li><a href="#" title="">agent listings</a></li>
							<li><a href="#" title="">view All</a></li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</footer>
	<script src="js/main.min.js"></script>
	<script src="js/script.js"></script>
</body>

</html>