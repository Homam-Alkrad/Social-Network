@using  StudentCommunity.UI.Models.Competition;
@model CreateCompetitionModel
@using Microsoft.AspNetCore.Identity
@using StudentCommunity.UI.Data
@inject UserManager<ApplicationUser> UserManager
@{
	Layout = "";
	var user = await UserManager.GetUserAsync(User);
	ViewData["Title"] = "Create Competition";

}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"]</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<script src="~/js/jquery-3.7.0.js"></script>
	<link href="~/js/jquery.datatables.min.css" rel="stylesheet" />
	<script src="~/js/jquery.datatables.min.js"></script>
	<link href="~/custom/css/main.min.css" rel="stylesheet" />
	<link href="~/custom/css/strip.css" rel="stylesheet" />
	<link href="~/custom/css/style.css" rel="stylesheet" />
	<link href="~/custom/css/color.css" rel="stylesheet" />
	<link href="~/custom/css/responsive.css" rel="stylesheet" />
</head>
<body>
	<section>
		<div class="gap no-top">
			<div class="container-fluid">
				<div class="row">
					<div class="col-lg-12">
						<div class="g-map" style="background: #088dcd none repeat scroll 0 0;">
							<div id=""></div>
							<div class="map-meta">
								<h1>Competion</h1>
								<p class="ml-5">Only authorized person can  access to  this page.</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<section>
		<div class="gap no-top overlap">
			<div class="container">
				<div class="row">
					<div class="col-lg-12">
						<div class="contct-info">
							<div class="contact-form">
								<div class="cnt-title">
									<span>Create New Competition</span>
									<i><img src="images/envelop.png" alt=""></i>
								</div>
								<form asp-action="Create" asp-controller="Competition" enctype="multipart/form-data" method="post">
									<div class="form-group col-lg-12">
										<input type="text" id="input" required="required" asp-for="Name" />
										<label class="control-label" for="input">Competition Name</label><i class="mtrl-select"></i>
										<span asp-validation-for="Name" class="text-danger"></span>
									</div>
									<div class="form-group col-lg-12">
										<textarea rows="4" id="textarea" required="required" style="height: 100px;" asp-for="Description"></textarea>
										<label class="control-label" for="textarea">Description</label><i class="mtrl-select"></i>
										<span asp-validation-for="Description" class="text-danger"></span>
									</div>
									<input type="submit" class="btn btn-primary ml-3 mt-2" />
								</form>
							</div>
							<div class="cntct-adres">
								<div class="cnt-title">
									<span>Create New Competition</span>
									<i><img src="images/envelop.png" alt=""></i>
								</div>

								<p class="text-white">
									Thank you for creating a new competition! Please follow the guidelines below to fill out the competition details:
								</p>

								<div class="my-1 p-1">
									<h5>1_Competition Name:</h5>
									Provide a unique and descriptive name for your competition.
								</div>

								<div class="my-1 p-1">
									<h5>2_Description:</h5>
									Write a brief and informative description of the competition. 
									Clearly explain the purpose and any important details.
								</div>								
								<h1 class="bg-cntct">Community</h1>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
</body>
</html>