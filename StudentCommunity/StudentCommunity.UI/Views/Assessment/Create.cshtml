@using StudentCommunity.UI.Models.Assessment
@model AssessmentModel
@using Microsoft.AspNetCore.Identity
@using StudentCommunity.UI.Data
@inject UserManager<ApplicationUser> UserManager
@{
	Layout = "";
	var user = await UserManager.GetUserAsync(User);
}
@{
	Layout = "";
}

<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"]</title>
	<link rel="icon" href="~/custom/images/fav.png" type="image/png" sizes="16x16">
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<script src="~/js/jquery-3.7.0.js"></script>
	<link href="~/js/jquery.datatables.min.css" rel="stylesheet" />
	<script src="~/js/jquery.datatables.min.js"></script>

	<link href="~/custom/css/main.min.css" rel="stylesheet" />
	<link href="~/custom/css/strip.css" rel="stylesheet" />
	<link href="~/custom/css/style.css" rel="stylesheet" />
	<link href="~/custom/css/color.css" rel="stylesheet" />
	<link href="~/custom/css/responsive.css" rel="stylesheet" />
</head>
<body>
	<section>
		<div class="gap no-top">
			<div class="container-fluid">
				<div class="row">
					<div class="col-lg-12">
						<div class="g-map" style="background: #088dcd none repeat scroll 0 0;">
							<div id=""></div>
							<div class="map-meta">
								<h1>Create an  Assessment</h1>
								<p class="ml-5">
									Please share your opinions and propose any necessary amendments.
									Your insights are invaluable in refining our platform.
								</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<section>
		<div class="gap no-top overlap">
			<div class="container">
				<div class="row">
					<div class="col-lg-12">
						<div class="contct-info">
							<div class="contact-form">
								<div class="cnt-title">
									<span>Assessment Form</span>
									<i><img src="images/envelop.png" alt=""></i>
								</div>
								<form asp-action="Create" asp-controller="Assessment" enctype="multipart/form-data">
									<div class="form-group col-lg-12">
										<div class="form-group">
											<label for="exampleFormControlTextarea1">Text</label>
											<textarea class="form-control" style="background-color:aliceblue;" id="exampleFormControlTextarea1" rows="3" asp-for="Text"></textarea>
										</div>
									</div>
									<div class="file-input-container col-lg-12 mt-3">
										<div class="mb-3">
											<label for="formFileDisabled" class="form-label">Select Image <b class="p-3 text-danger">*</b></label>
											<input class="form-control" type="file" asp-for="FeadbackImg">
											<span class="text-danger" asp-validation-for="FeadbackImg"></span>
										</div>
									</div>
									<input type="submit" class="btn btn-primary ml-3 mt-2" />
								</form>
							</div>
							<div class="cntct-adres">
								@{
									bool IsAdmin = await UserManager.IsInRoleAsync(user, "Admin");
									@if (user != null && IsAdmin)
									{

										<h3>
											<a asp-action="index" asp-controller="Assessment">
												<i class="fa fa-television" aria-hidden="true"></i>
												Assessment Centre
											</a>
										</h3>
									}
								}
								<p class="text-white">
									We value your feedback on our services. Your assessment is crucial for our continuous improvement.
									<br />
									Whether positive or constructive, your insights guide us in refining our processes.
									<br />
									Please take a moment to share your thoughts with us. Your input helps us better cater to your needs and enhances our overall service quality. 
									<br />
									<h6>We appreciate your time and perspective.</h6>
								</p>

							
								<h1 class="bg-cntct">Community</h1>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<footer>
		<div class="container">
			<div class="row">
				<div class="col-lg-4 col-md-4" style="margin: -30px 0px;">
					<div class="widget">
						<div class="foot-logo">
							<div class="logo">
								<a href="index-2.html" title=""><img src="~/custom/images/resources/logo4.png" alt=""></a>
							</div>
							<p>
								Take Care of Your Well-Being – Mind, Body, and Soul.
							</p>
						</div>
						<ul class="location">
							<li>
								<i class="ti-map-alt"></i>
								<p>
									Amman, Jordan, Irbid, and our central hub in Alramth.
								</p>
							</li>
							<li>
								<i class="ti-mobile"></i>
								<p>+962 7 9741 2338</p>
							</li>
						</ul>
					</div>
				</div>
				<div class="col-lg-2 col-md-4">
					<div class="widget">
						<div class="widget-title"><h4>follow</h4></div>
						<ul class="list-style">
							<li><i class="fa fa-facebook-square"></i> facebook</li>
							<li><i class="fa fa-twitter-square"></i>twitter</li>
							<li><i class="fa fa-instagram"></i>instagram</li>
							<li><i class="fa fa-google-plus-square"></i>Google+</li>
						</ul>
					</div>
				</div>
				<div class="col-lg-2 col-md-4">
					<div class="widget">
						<div class="widget-title"><h4>Navigate</h4></div>
						<ul class="list-style">
							<li><a href="about.html" title="">about us</a></li>
							<li><a href="contact.html" title="">contact us</a></li>
							<li><a href="terms.html" title="">terms & Conditions</a></li>
							<li><a href="#" title="">RSS syndication</a></li>
							<li><a href="sitemap.html" title="">Sitemap</a></li>
						</ul>
					</div>
				</div>
				<div class="col-lg-2 col-md-4">
					<div class="widget">
						<div class="widget-title"><h4>useful links</h4></div>
						<ul class="list-style">
							<li><a href="#" title="">leasing</a></li>
							<li><a href="#" title="">submit route</a></li>
							<li><a href="#" title="">how does it work?</a></li>
							<li><a href="#" title="">agent listings</a></li>
							<li><a href="#" title="">view All</a></li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</footer>
	<script data-cfasync="false" src="../../cdn-cgi/scripts/5c5dd728/cloudflare-static/email-decode.min.js"></script>
	<script src="js/main.min.js"></script>
	<script src="js/strip.pkgd.min.js"></script>
	<script src="js/script.js"></script>
	<script src="js/map-init.js"></script>
	<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA8c55_YHLvDHGACkQscgbGLtLRdxBDCfI"></script>
	<script>
		// Display the selected file name
		document.querySelector('.file-input').addEventListener('change', function () {
			var fileName = this.value.split('\\').pop();
			document.querySelector('.file-name').textContent = fileName;
		});
	</script>
</body>

</html>